<header class="page-header page-header-enclose">
  <h1><%= t("devise.confirmations.new.title") %></h1>
</header>

<%= simple_form_for resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post } do |f| %>
  <%= f.error_notification %>
  <%= f.input :email, label: false, autofocus: true, placeholder: true %>
  <div>
    <%= f.button :button, t("devise.confirmations.new.submit"), class: "btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
