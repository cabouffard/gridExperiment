<header class="page-header page-header-enclose">
  <h1><%= t("devise.passwords.edit.title") %></h1>
</header>

<%= simple_form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form" } do |f| %>
  <%= f.error_notification %>
  <%= f.hidden_field :reset_password_token %>
  <%= f.input :password, autofocus: true, label: false, placeholder: true, error: false %>
  <%= f.input :password_confirmation, label: false, placeholder: true, error: false %>
  <div>
    <%= f.button :button, t("devise.passwords.edit.submit"), class: "btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
