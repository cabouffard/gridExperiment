<header class="page-header page-header-enclose">
  <h1><%= t("devise.unlocks.new.title") %></h1>
</header>

<%= simple_form_for resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post } do |f| %>
  <%= f.error_notification %>
  <%= f.input :email, autofocus: true, error: false, label: false %>
  <div>
    <%= f.button :button, t("devise.unlocks.new.submit"), class: "btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
