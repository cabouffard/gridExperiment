<header class="page-header page-header-enclose">
  <h1><%= t("devise.registrations.new.title") %></h1>
</header>

<%= simple_form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>
  <%= devise_error_messages! %>
  <%= f.input :email, placeholder: true, label: false, error: false, autofocus: true %>
  <%= f.input :password, placeholder: true, label: false, error: false %>
  <%= f.input :password_confirmation, placeholder: true, label: false, error: false %>
  <div>
    <%= f.button :button, t("devise.registrations.new.submit"), class: "btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
